    <!-- Analytics Integration -->
    <script src="/js/analytics.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Track demo request page view
        trackEvent('funnel', 'demo_request_page_view');

        // Track vertical selection
        document.querySelectorAll('.vertical-option').forEach(option => {
            option.addEventListener('click', () => {
                const vertical = option.dataset.vertical;
                trackEvent('engagement', 'vertical_selection', vertical);
            });
        });

        // Track form field interactions
        document.querySelectorAll('#signupForm input').forEach(field => {
            let focused = false;
            field.addEventListener('focus', () => {
                if (!focused) {
                    trackEvent('engagement', 'demo_field_focus', field.name || field.id);
                    focused = true;
                }
            });
        });
    });
    </script>

    <script>
        // Vertical selection handling
        const verticalOptions = document.querySelectorAll('.vertical-option');
        const verticalSpecific = document.querySelectorAll('.vertical-specific');
        let selectedVertical = null;

        verticalOptions.forEach(option => {
            option.addEventListener('click', () => {
                // Remove selected class from all options
                verticalOptions.forEach(opt => opt.classList.remove('selected'));

                // Add selected class to clicked option
                option.classList.add('selected');

                // Hide all vertical-specific messaging
                verticalSpecific.forEach(section => section.classList.remove('active'));

                // Show selected vertical messaging
                selectedVertical = option.dataset.vertical;
                const specificSection = document.getElementById(`${selectedVertical}-specific`);
                if (specificSection) {
                    specificSection.classList.add('active');
                }

                // Update submit button text based on vertical
                updateSubmitButton();
            });
        });

        // Form handling
        const form = document.getElementById('signupForm');
        const submitBtn = document.getElementById('submitBtn');

        function updateSubmitButton() {
            const btnText = submitBtn.querySelector('.btn-text');
            if (selectedVertical && btnText) {
                const verticalMessages = {
                    'lawyers': 'Request Legal Demo',
                    'journalists': 'Request Journalism Demo',
                    'dictation': 'Request Professional Demo',
                    'medical': 'Request HIPAA Demo',
                    'court': 'Request Court Reporter Demo',
                    'government': 'Request Government Demo',
                    'education': 'Request Education Demo',
                    'general': 'Request Demo'
                };

                btnText.textContent = verticalMessages[selectedVertical] || 'Request Demo';
            }
        }

        // Check for success parameter and show success message
        if (urlParams.get('success') === 'true') {
            showFormStatus('success', 'üéâ Thank you! Your demo request has been submitted. We\'ll email you download instructions and demo details within 24 hours.');
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Clear previous errors
            clearErrors();

            // Get form data
            const formData = new FormData(form);
            const userData = {
                firstName: formData.get('firstName'),
                lastName: formData.get('lastName'),
                email: formData.get('email'),
                password: formData.get('password'),
                vertical: selectedVertical || 'general',
                source: 'demo_request'
            };

            // Validate form
            if (!validateForm(userData)) {
                return;
            }

            // Set the hidden vertical field
            document.getElementById('hiddenVertical').value = selectedVertical || 'general';

            // Show loading state
            setLoadingState(true);

            try {
                // Submit to Formspree
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: new FormData(form),
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                if (response.ok) {
                    showFormStatus('success', 'üéâ Thank you! Your demo request has been submitted. We\'ll email you download instructions and demo details within 24 hours.');
                    form.reset();
                    trackEvent('conversion', 'demo_request_success', selectedVertical || 'general');
                } else {
                    throw new Error('Demo request submission failed');
                }

            } catch (error) {
                console.error('Signup error:', error);
                showFormStatus('error', '‚ùå Sorry, there was an error submitting your demo request. Please try again or contact us at hello@lexopoly.com for assistance.');
                trackEvent('error', 'demo_request_error', error.message);
            } finally {
                setLoadingState(false);
            }
        });

        function setLoadingState(loading) {
            const btnText = submitBtn.querySelector('.btn-text');
            const btnSpinner = submitBtn.querySelector('.btn-spinner');

            if (loading) {
                submitBtn.disabled = true;
                btnText.style.display = 'none';
                btnSpinner.style.display = 'inline';
                submitBtn.style.opacity = '0.7';
            } else {
                submitBtn.disabled = false;
                btnText.style.display = 'inline';
                btnSpinner.style.display = 'none';
                submitBtn.style.opacity = '1';
            }
        }

        function showFormStatus(type, message) {
            const formStatus = document.getElementById('form-status');
            formStatus.style.display = 'block';
            formStatus.textContent = message;

            if (type === 'success') {
                formStatus.style.backgroundColor = '#d4edda';
                formStatus.style.color = '#155724';
                formStatus.style.borderLeft = '4px solid #28a745';
            } else if (type === 'error') {
                formStatus.style.backgroundColor = '#f8d7da';
                formStatus.style.color = '#721c24';
                formStatus.style.borderLeft = '4px solid #dc3545';
            }

            // Auto-hide after 15 seconds
            setTimeout(() => {
                formStatus.style.display = 'none';
            }, 15000);
        }

        function validateForm(data) {
            let isValid = true;

            if (!data.firstName.trim()) {
                showError('firstName', 'First name is required');
                isValid = false;
            }

            if (!data.lastName.trim()) {
                showError('lastName', 'Last name is required');
                isValid = false;
            }

            if (!data.email.trim()) {
                showError('email', 'Email address is required');
                isValid = false;
            } else if (!isValidEmail(data.email)) {
                showError('email', 'Please enter a valid email address');
                isValid = false;
            }

            if (!data.password.trim()) {
                showError('password', 'Password is required');
                isValid = false;
            } else if (data.password.length < 8) {
                showError('password', 'Password must be at least 8 characters');
                isValid = false;
            }

            return isValid;
        }

        function showError(fieldName, message) {
            const field = document.getElementById(fieldName);
            const errorElement = document.getElementById(`${fieldName}Error`);

            field.classList.add('error');
            errorElement.textContent = message;
        }

        function clearErrors() {
            const fields = ['firstName', 'lastName', 'email', 'password'];
            fields.forEach(fieldName => {
                const field = document.getElementById(fieldName);
                const errorElement = document.getElementById(`${fieldName}Error`);

                field.classList.remove('error');
                errorElement.textContent = '';
            });
        }

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // Auto-detect vertical from URL parameter
        const urlParams = new URLSearchParams(window.location.search);
        const verticalFromUrl = urlParams.get('vertical');
        if (verticalFromUrl) {
            const verticalOption = document.querySelector(`[data-vertical="${verticalFromUrl}"]`);
            if (verticalOption) {
                verticalOption.click();
            }
        }
    </script>
</body>
</html>