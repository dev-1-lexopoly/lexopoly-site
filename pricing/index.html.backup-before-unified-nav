    <!-- Analytics Integration -->
    <script src="/js/analytics.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Track pricing page view
        trackEvent('funnel', 'pricing_page_view');

        // Track tier interest
        document.querySelectorAll('.tier-card').forEach((card, index) => {
            const tierName = card.querySelector('.tier-name')?.textContent || `tier-${index}`;

            card.addEventListener('mouseenter', () => {
                trackEvent('pricing', 'tier_hover', tierName);
            });

            card.addEventListener('click', () => {
                trackEvent('pricing', 'tier_click', tierName);
            });
        });

        // Track CTA clicks from pricing
        document.querySelectorAll('a[href="/signup/"]').forEach(btn => {
            btn.addEventListener('click', () => {
                trackEvent('conversion', 'pricing_to_signup', btn.textContent.trim());
            });
        });

        document.querySelectorAll('a[href="/contact/"]').forEach(btn => {
            btn.addEventListener('click', () => {
                trackEvent('conversion', 'enterprise_contact_click', btn.textContent.trim());
            });
        });

        // Track FAQ interactions
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                trackEvent('engagement', 'faq_click', question.textContent.trim());
            });
        });
    });
    </script>
