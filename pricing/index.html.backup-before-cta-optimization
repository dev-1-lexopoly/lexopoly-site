    <script>
        function toggleMobileMenu() {
            const navMain = document.getElementById('nav-main');
            navMain.classList.toggle('show');
        }

        function toggleMobileDropdown(element) {
            if (window.innerWidth <= 968) {
                element.classList.toggle('mobile-open');
            }
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const nav = document.querySelector('.nav-container');
            const navMain = document.getElementById('nav-main');
            if (!nav.contains(event.target) && navMain.classList.contains('show')) {
                navMain.classList.remove('show');
            }
        });

        // Close mobile menu when clicking a link
        document.querySelectorAll('.nav-main a').forEach(link => {
            link.addEventListener('click', function() {
                const navMain = document.getElementById('nav-main');
                navMain.classList.remove('show');
            });
        });

        // Clear mobile dropdown states when resizing to desktop
        window.addEventListener('resize', function() {
            if (window.innerWidth > 968) {
                document.querySelectorAll('.nav-dropdown.mobile-open').forEach(dropdown => {
                    dropdown.classList.remove('mobile-open');
                });
            }
        });

        // ROI Calculator Logic
        const hoursSlider = document.getElementById('hours-per-month');
        const hoursDisplay = document.getElementById('hours-display');
        const revCost = document.getElementById('rev-cost');
        const otterCost = document.getElementById('otter-cost');
        const descriptCost = document.getElementById('descript-cost');
        const monthlySavings = document.getElementById('monthly-savings');
        const annualSavings = document.getElementById('annual-savings');
        const breakEvenHours = document.getElementById('break-even-hours');

        function calculateCosts() {
            const hours = parseInt(hoursSlider.value);
            hoursDisplay.textContent = hours;

            // Competitor pricing
            const revMonthly = hours * 90; // $90/hour ($1.50/min)
            const otterMonthly = 40; // Business plan (limited to 6000 min/user)
            const descriptMonthly = hours > 10 ? 50 : 24; // $24 for <=10hrs, $50 for Creator plan

            // LocalTranscribe pricing
            const localTranscribeMonthly = 79;

            // Calculate savings vs Rev.com (highest cost)
            const monthlySave = Math.max(0, revMonthly - localTranscribeMonthly);
            const annualSave = monthlySave * 12;

            // Update displays
            revCost.textContent = '$' + revMonthly.toLocaleString();

            // Show "Exceeded" for limited plans
            if (hours > 100) {
                otterCost.textContent = 'Limit Exceeded';
            } else {
                otterCost.textContent = '$' + otterMonthly;
            }

            if (hours > 10) {
                descriptCost.textContent = '$50';
            } else {
                descriptCost.textContent = '$' + descriptMonthly;
            }

            monthlySavings.textContent = '$' + monthlySave.toLocaleString();
            annualSavings.textContent = '$' + annualSave.toLocaleString();

            // Break-even calculation (79 / 90 per hour = 0.88 hours = 52.8 minutes)
            const breakEven = (79 / 90).toFixed(1);
            breakEvenHours.textContent = breakEven;

            // Track calculator interaction
            if (typeof trackEvent === 'function') {
                trackEvent('roi_calculator', 'slider_change', hours.toString());
            }
        }

        // Initialize calculator
        if (hoursSlider) {
            hoursSlider.addEventListener('input', calculateCosts);
            calculateCosts(); // Initial calculation

            // Track calculator engagement
            hoursSlider.addEventListener('mousedown', function() {
                if (typeof trackEvent === 'function') {
                    trackEvent('engagement', 'roi_calculator_start');
                }
            });
        }
    </script>
</body>
